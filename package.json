{
	"name": "cd",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"start": "ng serve -o --host 0.0.0.0",
		"start-mock": "ng serve -o --host 0.0.0.0 --configuration mock",
		"build": "ng build --base-href /countdown/",
		"build-local": "ng build --base-href /dist/cd/",
		"watch": "ng build --watch --configuration development",
		"test": "ng test",
		"lint": "npx prettier --write ./**/*.{js,ts,json} --use-tabs --single-quote && eslint --fix \"**/*.html\""
	},
	"lint-staged": {
		"*.{js,ts,json}": "npx prettier --write --use-tabs --single-quote",
		"*.html": "eslint --fix",
		"*.scss": "stylelint --fix --customSyntax postcss-scss"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged --relative"
		}
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^16.1.0",
		"@angular/common": "^16.1.0",
		"@angular/compiler": "^16.1.0",
		"@angular/core": "^16.1.0",
		"@angular/fire": "^16.0.0",
		"@angular/forms": "^16.1.0",
		"@angular/platform-browser": "^16.1.0",
		"@angular/platform-browser-dynamic": "^16.1.0",
		"@angular/router": "^16.1.0",
		"date-fns": "^2.30.0",
		"ngx-mask": "^16.2.9",
		"ngx-quicklink": "^0.4.2",
		"rxjs": "~7.8.0",
		"tslib": "^2.3.0",
		"zone.js": "~0.13.0"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^16.1.0",
		"@angular/cli": "~16.1.0",
		"@angular/compiler-cli": "^16.1.0",
		"@html-eslint/eslint-plugin": "^0.19.1",
		"@html-eslint/parser": "^0.19.1",
		"@types/jasmine": "~4.3.0",
		"eslint": "^8.46.0",
		"eslint-plugin-html": "^7.1.0",
		"husky": "4.3.0",
		"jasmine-core": "~4.6.0",
		"karma": "~6.4.0",
		"karma-chrome-launcher": "~3.2.0",
		"karma-coverage": "~2.2.0",
		"karma-jasmine": "~5.1.0",
		"karma-jasmine-html-reporter": "~2.1.0",
		"lint-staged": "13.0.3",
		"postcss-scss": "4.0.2",
		"prettier": "^2.8.8",
		"stylelint": "14.11.0",
		"stylelint-order": "5.0.0",
		"stylelint-scss": "4.3.0",
		"typescript": "~5.1.3"
	}
}
