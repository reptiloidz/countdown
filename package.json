{
	"name": "cd",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"generate-env": "ts-node scripts/generate-env.ts",
		"start": "ts-node scripts/generate-env.ts && yarn run svg && ng serve -o --host 0.0.0.0",
		"svg": "node scripts/sprite.js && yarn run svgo",
		"svgo": "svgo src/assets/sprite.svg --config scripts/svgo.config.cjs --pretty",
		"start-mock": "ng serve -o --host 0.0.0.0 --configuration mock",
		"build": "ng build --configuration production",
		"build-local": "ng build --base-href /dist/cd/ --configuration production",
		"watch": "ng build --watch --configuration development",
		"test": "jest --verbose",
		"test:coverage": "jest --coverage",
		"test:watch": "jest --watch",
		"prepare": "husky",
		"lint": "npx prettier --write ./**/*.{js,ts,json} --use-tabs --single-quote && eslint --fix \"**/*.html\""
	},
	"lint-staged": {
		"*.{js,ts,json}": "npx prettier --write --use-tabs --single-quote",
		"*.{ts}": "jest --bail --findRelatedTests --passWithNoTests",
		"*.html": "eslint --fix",
		"*.scss": "stylelint --fix --customSyntax postcss-scss"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^17.3.12",
		"@angular/cdk": "^16.2.12",
		"@angular/common": "^17.3.12",
		"@angular/compiler": "^17.3.12",
		"@angular/core": "^17.3.12",
		"@angular/fire": "^17.1.0",
		"@angular/forms": "^17.3.12",
		"@angular/platform-browser": "^17.3.12",
		"@angular/platform-browser-dynamic": "^17.3.12",
		"@angular/router": "^17.3.12",
		"date-fns": "^3.0.1",
		"emojibase": "^15.3.1",
		"ngx-device-detector": "^7.0.0",
		"ngx-mask": "18.0.0",
		"rxjs": "~7.8.0",
		"sqids": "^0.3.0",
		"string-width": "^5.0.1",
		"tslib": "^2.3.0",
		"zone.js": "~0.14.10"
	},
	"devDependencies": {
		"@angular-builders/custom-webpack": "18.0.0",
		"@angular-builders/dev-server": "^7.3.1",
		"@angular-devkit/build-angular": "^17.3.15",
		"@angular/cli": "^17.3.15",
		"@angular/compiler-cli": "^17.3.12",
		"@html-eslint/eslint-plugin": "^0.19.1",
		"@html-eslint/parser": "^0.19.1",
		"@sass-fairy/list": "1.2.4",
		"@sass-fairy/string": "1.3.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.14.1",
		"dotenv": "^16.5.0",
		"eslint": "^8.46.0",
		"eslint-plugin-html": "^7.1.0",
		"glob": "^10.3.14",
		"husky": "5.0.0",
		"jest": "^29.7.0",
		"jest-preset-angular": "^14.5.0",
		"lint-staged": "^15.2.11",
		"postcss": "8.4.49",
		"postcss-import": "16.1.0",
		"postcss-preset-env": "10.1.2",
		"postcss-scss": "4.0.9",
		"prettier": "3.2.5",
		"slash": "^5.1.0",
		"stylelint": "16.12.0",
		"stylelint-order": "6.0.4",
		"stylelint-prettier": "5.0.2",
		"stylelint-scss": "6.10.0",
		"svg-sprite": "2.0.4",
		"svgo": "3.0.0",
		"ts-node": "^10.9.2",
		"typescript": "5.4.5"
	}
}
